  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/fe"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch API",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/be/index.js",
      "cwd": "${workspaceFolder}/be"
    }
  ]
}
